<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.siri.vresume.dao.UserDao">

	<select id="getUserDetailsByUserName" resultType="com.siri.vresume.domain.User"
		parameterType="String">
		SELECT
		id,email,password,role,created_at as createdAt from users where email =#{username} and verification=0
	</select>


	<insert id="saveUser" parameterType="com.siri.vresume.domain.User">
		INSERT INTO
		users(email, password,role,created_at)
		VALUES
		(#{email},#{password},#{role},NOW())
	</insert>

	<select id="validateEmail" resultType="int" parameterType="String">
		SELECT count(userName) FROM users where email=#{emailId}
	</select>

	<update id="updateUser" parameterType="com.siri.vresume.domain.User">

		UPDATE userdetails SET
		 city
		= #{city},name = #{name},state =
		#{state},country= #{country},zipcode
		=#{zipcode} WHERE "userId"=#{userId};

	</update>
	
	<update id="deActivateUser" parameterType="String">
		update users set verification = 1 where email=#{username} 
	</update>
	
	<update id="activateUser" parameterType="String">
		update users set verification = 0 where email=#{username} 
	</update>

</mapper>
