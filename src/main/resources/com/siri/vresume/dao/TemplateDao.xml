<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.siri.vresume.dao.TemplateDao">

	<select id="fetchTemplates" resultType="com.siri.vresume.domain.Templates"
		parameterType="Integer">
		
		select id as templateId, name as templateName , user_id as userId , created_at as createdAt , updated_at as updatedAt from templates where user_id = #{userId}
	</select>
	
	<select id="fetchSections" resultType="com.siri.vresume.domain.Sections"
		parameterType="Integer">
		
		select id as sectionId , name as sectionName , template_id as templateId , created_at as createdAt , updated_at as updatedAt from sections where template_id = #{templateId}
	</select>

		<insert id="insertTemplate" parameterType="com.siri.vresume.domain.Templates" useGeneratedKeys="true" keyProperty="templateId" keyColumn="id">
		insert into templates (name,user_id,created_at) values (#{templateName},#{userId},NOW())
		</insert>

		<insert id="insertSection" useGeneratedKeys="true">
		insert into sections (template_id,name,created_at) values (#{templateId},#{section.sectionName},NOW())
		
		</insert>

</mapper>
